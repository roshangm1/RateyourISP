<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/core_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/name_of_isp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of the ISP"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/short_desp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="SHort Descriptioasdfasdfasdkfasdfasdfasdfaksdfnkasndfkansdkjfbakdsfakjsbdfkjabsdkjfbaskdjbfaskjdbfakjsdbfkjabsdkjfasdkjfbaskdjbfaskd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e6f3f7"
            android:layout_marginTop="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">


            <ImageView
                android:id="@+id/logo_isp"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                 />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address (inside valley)"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact no"

                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Website"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>