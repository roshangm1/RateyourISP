<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="roshan.info.np.rateyourisp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="roshan.info.np.rateyourisp.extras.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="roshan.info.np.rateyourisp.activities.SplashActivity"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="roshan.info.np.rateyourisp.activities.DetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="roshan.info.np.rateyourisp.activities.AllReviews"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name="roshan.info.np.rateyourisp.activities.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name="roshan.info.np.rateyourisp.activities.AboutUs" />
        <activity
            android:name="roshan.info.np.rateyourisp.activities.LoginActivity"
            android:theme="@style/FullscreenTheme">

        </activity>
    </application>

</manifest>